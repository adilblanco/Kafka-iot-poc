# Variables d'environnement pour le développement local
# Copier ce fichier vers .env et ajuster selon vos besoins

# Configuration du service
SERVICE_NAME="IoT Sensor Producer"
SERVICE_VERSION="2.0.0"
SERVICE_DESCRIPTION="Système de simulation de capteurs IoT pour bâtiment intelligent"
HOST="0.0.0.0"
PORT="5000"
LOG_LEVEL="INFO"
DEBUG="true"

# Configuration Kafka
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_SENSOR_TOPIC="sensors"
KAFKA_ALERT_TOPIC="alerts"
KAFKA_CLIENT_ID="iot_producer"
KAFKA_ACKS="all"
KAFKA_RETRIES="3"
KAFKA_LINGER_MS="10"
KAFKA_COMPRESSION_TYPE="gzip"

# Configuration avancée des topics
KAFKA_SENSOR_TOPIC_PARTITIONS="1"
KAFKA_SENSOR_TOPIC_REPLICATION="1"
KAFKA_ALERT_TOPIC_PARTITIONS="1"
KAFKA_ALERT_TOPIC_REPLICATION="1"